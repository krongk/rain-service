<%= page_header('留言列表', {'返回网站' => site_url(@site)}) %>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>姓名</th>
      <th>手机号码</th>
      <th>电子邮件</th>
      <th>留言内容</th>
      <th>是否处理</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @site_comments.each do |site_comment| %>
      <tr>
        <td><%= site_comment.name %></td>
        <td><%= site_comment.mobile_phone %></td>
        <td><%= site_comment.email %></td>
        <td><%= site_comment.content %></td>
        <td><%= site_comment.is_processed %></td>
        <td>
        <%= link_to '编辑', edit_site_comment_path(site_comment), class: 'btn btn-primary' %>
        <%= link_to '删除', site_comment, method: :delete, data: { confirm: '确定要删除?' }, class: 'btn btn-inverse' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

