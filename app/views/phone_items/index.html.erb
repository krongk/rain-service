<h1><%= t 'phone_items.index.title' %></h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>手机号码</th>
      <th>来源</th>
      <th>姓名</th>
      <th>城市</th>
      <th>区域</th>
      <th>描述</th>
      <th>执行情况</th>
      <th colspan="3">操作</th>
    </tr>
  </thead>

  <tbody>
    <% @phone_items.each do |phone_item| %>
      <tr>
        <td><%= phone_item.mobile_phone %></td>
        <td><%= phone_item.source_name %></td>
        <td><%= phone_item.name %></td>
        <td><%= phone_item.city %></td>
        <td><%= phone_item.area %></td>
        <td><%= phone_item.description %></td>
        <td><%= phone_item.is_processed %></td>
        <td><%= link_to '发送日志', phone_item %></td>
        <td><%= link_to '修改', edit_phone_item_path(phone_item) %></td>
        <td><%= link_to '删除', phone_item, method: :delete, data: { confirm: '确定删除吗?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @phone_items %>
<br>


<%= link_to '添加', new_phone_item_path, class: 'btn btn-primary btn-large' %>  | 
<%= link_to '返回', '/home/sms' %>