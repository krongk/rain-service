<%= page_header(t('mail_items.index.title'), {'返回邮件通' => '/home/email', '添加邮件' => new_mail_item_path, '添加模板' => new_mail_tmp_path}) %>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Email</th>
      <th>来源</th>
      <th>姓名</th>
      <th>城市</th>
      <th>区域</th>
      <th>描述</th>
      <th>执行情况</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @mail_items.each do |mail_item| %>
      <tr>
        <td><%= mail_item.email %></td>
        <td><%= mail_item.source_name %></td>
        <td><%= mail_item.name %></td>
        <td><%= mail_item.city %></td>
        <td><%= mail_item.area %></td>
        <td><%= mail_item.description %></td>
        <td><%= mail_item.is_processed %></td>
        <td><%= link_to '修改', edit_mail_item_path(mail_item) %></td>
        <td><%= link_to '删除', mail_item, method: :delete, data: { confirm: '确定要删除?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @mail_items %>
<br>
