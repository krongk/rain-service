<%= page_header(t('themes.index.title'), {'添加短信模版' => new_theme_path}) %>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>名称</th>
      <th>标签</th>
      <th>演示图片</th>
      <th>演示地址</th>
      <th colspan="3">操作</th>
    </tr>
  </thead>

  <tbody>
    <% @themes.each do |theme| %>
      <tr>
        <td><%= theme.name %></td>
        <td><%= theme.tags %></td>
        <td><%= image_tag(theme.templete_image, width: '60px', height: '60px') %></td>
        <td><%= link_to theme.templete_url.to_s.truncate(20), theme.templete_url, target: '_blank' %></td>
        <td><%= link_to '查看', theme %></td>
        <td><%= link_to '编辑', edit_theme_path(theme) %></td>
        <td><%= link_to '删除', theme, method: :delete, data: { confirm: '确定添加?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
