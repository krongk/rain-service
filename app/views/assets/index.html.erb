<h1>Listing assets</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Asset type</th>
      <th>Asset name</th>
      <th>Asset path</th>
      <th>Bucket</th>
      <th>Asset key</th>
      <th>Note</th>
      <th>Return hash</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @assets.each do |asset| %>
      <tr>
        <td><%= asset.user %></td>
       
        <td><%= asset.bucket %></td>
        <td><%= asset.asset_key %></td>
        <td><%= asset.note %></td>
  
        <td><%= link_to 'Show', asset %></td>
        <td><%= link_to 'Edit', edit_asset_path(asset) %></td>
        <td><%= link_to 'Destroy', asset, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

