<%= simple_form_for(@site_page) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :user %>
    <%= f.input :short_id %>
    <%= f.association :site %>
    <%= f.input :title %>
    <%= f.input :content %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, data: { disable_with: "正在提交..." }  %>
  </div>
<% end %>
