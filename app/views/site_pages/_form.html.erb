<%= simple_form_for(@site_page) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :site, include_blank: false, :selected => @site.id %>
    <%= f.input :short_id, placeholder: "可以留空，系统自动生成。" %>
    
    <%= f.input :title, input_html: {class: 'input-block-level'} %>
    <%= f.input :content, input_html: {class: 'input-block-level ckeditor',  id: 'wysiwyg1', rows: 40} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, data: { disable_with: "正在提交..." }  %>
  </div>
<% end %>
