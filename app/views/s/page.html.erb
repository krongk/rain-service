<% title "#{@site_post.try(:title) || @site_page.title} - #{@site.title}" %>
<% meta_keywords "#{@site.title}, #{@site_post.try(:title)}, #{@site_page.title}" %>
<% meta_description "#{@site.title}, #{@site_post.try(:title)}, #{@site_page.title}" %>

<%= raw( liquidize( @site_page.content, 
  'site' => @site, 
  'page' => @site_page,
  'posts' => @site_posts,  
  'post' => @site_post, 
  'comment' => @site_comment, 
  'authenticity_token' => session[:_csrf_token], 
  'redirect_url' => request.original_url )) 
%>


