<div class='container-fluid'>
    <div class='row-fluid' id='content-wrapper'>
        <div class='span12'>
            <div class='row-fluid'>
                <div class='span12'>
                    <div class='page-header'>
                        <h1 class='pull-left'>
                            <i class='icon-edit'></i>
                            <span>创建网站四步骤</span>
                        </h1>
                        <div class='pull-right'>
                            <ul class='breadcrumb'>
                                <li>
                                    <a href="/sites"><i class='icon-bar-chart'></i>
                                    </a>
                                </li>
                                <li class='separator'>
                                    <i class='icon-angle-right'></i>
                                </li>
                                <li>
                                    网站通
                                </li>
                                <li class='separator'>
                                    <i class='icon-angle-right'></i>
                                </li>
                                <li class='active'>创建网站</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class='row-fluid'>
                <div class='span12 box'>
                    <div class='box-content box-padding'>
											<div class='fuelux'>
											    <div class='wizard'>
											        <ul class='steps'>
											            <li data-target='#step1'>
											                <span class='step'>1</span>
											            </li>
											            <li class='active' data-target='#step2'>
											                <span class='step'>2</span>
											            </li>
											            <li data-target='#step3'>
											                <span class='step'>3</span>
											            </li>
											            <li data-target='#step4'>
                                      <span class='step'>4</span>
                                  </li>
											        </ul>

											    </div>
											    <div class='step-content'>
											        <hr class='hr-normal'>

											          <div class='step-pane' id='step1'>
											            <div class="alert alert-info">网站名称一旦创建成功就不能修改</div>
											          </div>
											          <div class='step-pane active' id='step2'>
<%= render layout: 'form' do |f| %>
  <%= f.error_notification %>
  <% if @site.errors.any? %>
    <div class="alert alert-error error_messages">
      <ul>
      <% @site.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <fieldset>
      <%= f.input :domain,  hint: "网站绑定的域名，请不要随意修改；若没有申请域名则留空。",  :input_html => {:class => "span12 icon-over-input"}, wrapper_html: { class: 'row-fluid' } %>

      <br>
      <%= f.input :title, :required => true, :input_html => {:class => "span12 icon-over-input"}, wrapper_html: { class: 'row-fluid' }  %>

      <br>
      <%= f.input :contact_name, :input_html => {value: @site.user.user_detail.contact_name, class: "span12 icon-over-input"}, wrapper_html: { class: 'row-fluid' }  %>
      <%= f.input :company_name, :input_html => {value: @site.user.user_detail.company_name, class: "span12 icon-over-input"}, wrapper_html: { class: 'row-fluid' }  %>
      <%= f.input :mobile_phone, :input_html => {value: @site.user.user_detail.mobile_phone, class: "span12 icon-over-input"}, wrapper_html: { class: 'row-fluid' }  %>
      <%= f.input :tel_phone, :input_html => {value: @site.user.user_detail.tel_phone, class: "span12 icon-over-input"}, wrapper_html: { class: 'row-fluid' }  %>
      <%= f.input :qq, :input_html => {value: @site.user.user_detail.qq, class: "span12 icon-over-input"}, wrapper_html: { class: 'row-fluid' }  %>
      <%= f.input :email, :input_html => {value: @site.user.user_detail.email, class: "span12 icon-over-input"}, wrapper_html: { class: 'row-fluid' }  %>
      <%= f.input :website, :input_html => {value: get_url(@site.user.user_detail.website), class: "span12 icon-over-input"}, wrapper_html: { class: 'row-fluid' }  %>
      <%= f.input :address, :input_html => {value: [@site.user.user_detail.region, @site.user.user_detail.city, @site.user.user_detail.district, @site.user.user_detail.address].join, class: "span12 icon-over-input"}, wrapper_html: { class: 'row-fluid' }  %>

  </fieldset>

<% end %>
											          </div>
											          <div class='step-pane' id='step3'>
											              <div class="alert alert-info">请首先完成第二步</div>
											          </div>
											          <div class='step-pane' id='step4'>
											             <div class="alert alert-info">请首先完成第三步</div>
											          </div>
											    </div>
											</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
