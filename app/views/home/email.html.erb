<%= page_header('邮件通', {'发送日志' => '/mail_items', '添加邮件' => new_mail_item_path, '添加模板' => new_mail_tmp_path, '批量导入' => '/mail_import'}) %>

<!-- send mail start -->
<%= form_tag "/mail_send", :method => :post do |f| %>

<div class='row-fluid'>
  <div class='span12 box'>
    <div class='box-header'>
        <div class='title'><div class="icon-play"></div> 1.选择发送通道</div>
        <div class='actions'>
            <a href="#" class="btn box-collapse btn-mini btn-link"><i></i>
            </a>
        </div>
    </div>
    <div class='box-content'>
      <input id="cate" name="cate" type="radio" value="mailgun" checked ="true">MailGun &nbsp;&nbsp;
      <input id="cate" name="cate" type="radio" value="gmail" checked ="true">Gmail &nbsp;&nbsp;
      <input id="cate" name="cate" type="radio" value="qq" checked ="true">QQMail
    </div>
  </div>
</div>

<div class='row-fluid'>
  <div class='span12 box'>
    <div class='box-header'>
        <div class='title'><div class="icon-play"></div> 2.选择邮件模版</div>
        <div class='actions'>
            <a href="#" class="btn box-collapse btn-mini btn-link"><i></i>
            </a>
        </div>
    </div>
    <div class='box-content'>
        <div class='accordion accordion-green' id='accordion2' style='margin-bottom:0;'>
            <% current_user.mail_tmps.each_with_index do |item, index| %> 
            <div class='accordion-group'>
                <div class='accordion-heading'>

                 <input id="mail_item_name<%=index %>" name="mail_tmp_id" type="radio" value="<%=item.id%>" style="float: left; margin: 0px;" checked ="true">

                <a class='accordion-toggle' data-parent='#accordion2' data-toggle='collapse' href='#collapse<%=index%>-accordion2'>
                      <span class="badge badge-<%=rand_flag%>"><%=item.id%></span>
                      <%= item.title %>
                    </a>
                </div>
                <div class='accordion-body collapse' id='collapse<%=index%>-accordion2'>
                    <div class='accordion-inner'>
                       <%= raw (item.content) %>
                       <div class="text-right">
                       <%= link_to '编辑', edit_mail_tmp_path(item), class: "btn btn-primary" %>
                       <%= link_to '删除', item, class: "btn btn-danger", method: :delete, data: { confirm: '确定删除?' } %>
                       </div>
                    </div>
                </div>
            </div>
            <% end %>
        </div>
    </div>
  </div>
</div>

<!-- datatable -->
<div class='row-fluid'>
<div class='span12 box bordered-box orange-border' style='margin-bottom:0;'>
<div class='box-header'>
    <div class='title'><div class="icon-forward"></div> 3.选择电子邮箱</div>
    <div class='actions'>
        <a href="#" class="btn box-collapse btn-mini btn-link"><i></i>
        </a>
    </div>
</div>
<div class='box-content box-no-padding'>

  <div class="btn-group">
    <a href="/home/email?processed=false">
      <button class="btn">
        <i class="icon-align-left"></i> 未发送
      </button>
    </a>
    <a href="/home/email?processed=true">
      <button class="btn">
        <i class="icon-align-left"></i> 已发送
      </button>
    </a>
    <a href="/home/email">
      <button class="btn">
        <i class="icon-align-left"></i> 全部
      </button>
    </a>
  </div>

  <%= render :partial => 'mail_items/list', :locals => {:mail_items => @mail_items} %>

</div>
</div>
</div><!-- end datatable -->

  <div class="form-actions">
     <a onClick="javascript: ToggleCheck();" href="javascript:void(0);">全选</a> &nbsp;|&nbsp;
    <%= submit_tag "发送邮件", class: 'btn btn-primary btn-large' %>
  </div>
<% end %>


<script type="text/javascript">
    function ToggleCheck()
    {
      var names=document.getElementsByName("mail_item_ids[]");
      var len=names.length;
      if(len>0)
      {
       var i=0;
       for(i=0;i<len;i++){
         if(names[i].checked == true){
                names[i].checked=false;
         }else{
                names[i].checked=true;
         }
       }
       
      }
    }
</script>