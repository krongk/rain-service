<%= page_header( @site.title, {'返回网站列表' => sites_url}) %>

<div class="row-fluid">
  <!-- page -->
  <div class='span4 box'>
      <div class='box-header'>
          <div class='title'>网页</div>
          <div class='actions'>
              <a href="#" class="btn box-remove btn-mini btn-link"><i class='icon-remove'></i>
              </a>
              <a href="#" class="btn box-collapse btn-mini btn-link"><i></i>
              </a>
          </div>
      </div>
      <table class="table table-bordered table-striped">
      <% @site_pages.each_with_index do |item, index| %>
          <tr><td>
            <%= link_to item.title, get_short_url(@site, item), target: '_blank' %>
            <div class="pull-right">
                <%= link_to '编辑', edit_site_site_page_path(@site, item), class: 'btn btn-mini btn-primary'%>  
                <%= link_to '删除', site_page_path(item), method: :delete, data: {confirm: '确定要删除？'}, class: 'btn btn-mini btn-inverse'%>
              </div>
          </td></tr>
      <% end %>
      </table>
    
      <div class="row-fluid">
        <div class="span6 box-quick-link blue-background">
          <%= link_to site_site_pages_path(@site) do %>
              <div class="header">
                  <div class="icon-comments"></div>
              </div>
              <div class="content">更多...</div>
          <% end %>
        </div>
        <div class="span6 box-quick-link green-background">
          <%= link_to new_site_site_page_path(@site) do %>
              <div class="header">
                  <div class="icon-star"></div>
              </div>
              <div class="content">添加网页</div>
          <% end %>
        </div>
      </div>
  </div>
  <!-- page -->
  <div class='span4 box'>
      <div class='box-header'>
          <div class='title'>博客/新闻</div>
          <div class='actions'>
              <a href="#" class="btn box-remove btn-mini btn-link"><i class='icon-remove'></i>
              </a>
              <a href="#" class="btn box-collapse btn-mini btn-link"><i></i>
              </a>
          </div>
      </div>
      <div class='box-content'>
          <div class='accordion accordion-blue' id='accordion2' style='margin-bottom:0;'>
              <% @site_posts.each_with_index do |item, index| %>
                <div class='accordion-group'>
                    <div class='accordion-heading'>
                        <a class='accordion-toggle' data-parent='#accordion2' data-toggle='collapse' href='#collapse<%=index%>-accordion2'>
                            <%= item.title%>
                        </a>
                    </div>
                    <div class='accordion-body collapse in' id='collapse<%=index%>-accordion2'>
                        <div class='accordion-inner'>
                           <%= strip_tags(item.content) %>
                        </div>
                    </div>
                </div>
              <% end %>
          </div>
      </div>
      <div class="row-fluid">
        <div class="span6 box-quick-link blue-background">
          <%= link_to site_site_posts_path(@site) do %>
              <div class="header">
                  <div class="icon-comments"></div>
              </div>
              <div class="content">更多...</div>
          <% end %>
        </div>
        <div class="span6 box-quick-link green-background">
          <%= link_to new_site_site_post_path(@site) do %>
              <div class="header">
                  <div class="icon-star"></div>
              </div>
              <div class="content">添加博客</div>
          <% end %>
        </div>
      </div>
  </div>
  <!-- comments -->
  <div class='span4 box'>
      <div class='box-header'>
          <div class='title'>用户留言</div>
          <div class='actions'>
              <a href="#" class="btn box-remove btn-mini btn-link"><i class='icon-remove'></i>
              </a>
              <a href="#" class="btn box-collapse btn-mini btn-link"><i></i>
              </a>
          </div>
      </div>
      <div class='box-content'>
          <div class='accordion accordion-blue' id='accordion3' style='margin-bottom:0;'>
              <% @site_comments.each_with_index do |item, index| %>
                <div class='accordion-group'>
                    <div class='accordion-heading'>
                        <a class='accordion-toggle' data-parent='#accordion3' data-toggle='collapse' href='#collapse<%=index%>-accordion3'>
                            <%= item.mobile_phone%>
                        </a>
                    </div>
                    <div class='accordion-body collapse in' id='collapse<%=index%>-accordion3'>
                        <div class='accordion-inner'>
                           <%= strip_tags(item.content) %>
                        </div>
                    </div>
                </div>
              <% end %>
          </div>
      </div>
      <div class="row-fluid">
        <div class="span6 box-quick-link blue-background">
          <%= link_to site_site_comments_path(@site) do %>
              <div class="header">
                  <div class="icon-comments"></div>
              </div>
              <div class="content">更多...</div>
          <% end %>
        </div>
        <div class="span6 box-quick-link green-background">
          <%= link_to new_site_site_comment_path(@site) do %>
              <div class="header">
                  <div class="icon-star"></div>
              </div>
              <div class="content">添加网页</div>
          <% end %>
        </div>
      </div>
  </div>
</div>

