<h1>Listing sites</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Site name</th>
      <th>Site title</th>
      <th>Domain</th>
      <th>Theme</th>
      <th>Head</th>
      <th>Header</th>
      <th>Body</th>
      <th>Footer</th>
      <th>Is published</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @sites.each do |site| %>
      <tr>
        <td><%= site.user %></td>
        <td><%= site.site_name %></td>
        <td><%= site.site_title %></td>
        <td><%= site.domain %></td>
        <td><%= site.theme_id %></td>
        <td><%= site.head %></td>
        <td><%= site.header %></td>
        <td><%= site.body %></td>
        <td><%= site.footer %></td>
        <td><%= site.is_published %></td>
        <td><%= link_to 'Show', site %></td>
        <td><%= link_to 'Edit', edit_site_path(site) %></td>
        <td><%= link_to 'Destroy', site, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

