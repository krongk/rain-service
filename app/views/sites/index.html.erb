<%= page_header(t('sites.index.title'), {'添加网站' => new_site_path}) %>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>唯一标示</th>
      <th>网站标题</th>
      <th>域名</th>
      <th>模版</th>
      <th>是否发布</th>
      <th colspan="3">操作</th>
    </tr>
  </thead>

  <tbody>
    <% @sites.each do |site| %>
      <tr>
        <td><%= site.short_id %></td>
        <td><%= site.title %></td>
        <td><%= site.domain %></td>
        <td><%= site.theme_id %></td>
        <td><%= site.is_published %></td>
        <td><%= link_to '预览', get_short_url(site), target: '_blank' %></td>
        <td><%= link_to '编辑', edit_site_path(site) %></td>
        <td><%= link_to '删除', site, method: :delete, data: { confirm: '确定要删除么?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
